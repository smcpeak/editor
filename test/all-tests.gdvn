// all-tests.gdvn
// List of all GUI test command lines to run in succession.

[
  [ "./editor.exe" "-ev=test/down.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/copy-paste.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/file-open-dialog1.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/file-open-nonexist.ev" ]

  // This test touches `gets-modified.txt`, making it relatively recent
  // by the time we run the second test, below, that uses that file.
  // Therefore, this test is run near the start, so time can elapse
  // between them.  The test will work even if they are adjacent, but a
  // sleep typically gets activated in that case.
  [ "./editor.exe" "-ev=test/reload-after-modification.ev" "test/gets-modified.txt" ]

  [ "./editor.exe" "-ev=test/simple-text-ins.ev" ]
  [ "./editor.exe" "-ev=test/sar-find-cs-completion.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/sar-repl-cs-completion.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/sar-match-limit.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/sar-replace-bol.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/resize1.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/read-only1.ev" ]
  [ "./editor.exe" "-ev=test/read-only2.ev" ]
  [ "./editor.exe" "-ev=test/read-only3.ev" ]
  [ "./editor.exe" "-ev=test/prompt-unsaved-changes.ev" ]
  [ "./editor.exe" "-ev=test/screenshot1.ev" "test/file1.h" ]
  [ "./editor.exe" "-ev=test/visible-tabs.ev" "test/tabs-test.txt" ]
  [ "./editor.exe" "-ev=test/search-hits-with-tab.ev" "test/tabs-test.txt" ]
  [ "./editor.exe" "-ev=test/keysequence.ev" ]
  [ "./editor.exe" "-ev=test/keysequence2.ev" ]
  [ "./editor.exe" "-ev=test/screenshot-has-tabs.ev" "test/has-tabs.c" ]
  [ "./editor.exe" "-ev=test/open-files-close-docs.ev" "test/read-only1.ev" "test/read-only2.ev" "test/read-only3.ev" "test/resize1.ev" ]
  [ "./editor.exe" "-ev=test/open-files-filter.ev" "test/read-only1.ev" "test/read-only2.ev" "test/read-only3.ev" "test/resize1.ev" ]
  [ "./editor.exe" "-ev=test/cut-then-paste.ev" ]
  [ "./editor.exe" "-ev=test/select-beyond-eof.ev" ]
  [ "./editor.exe" "-ev=test/fn-input-repeat-tab.ev" ]
  [ "./editor.exe" "-ev=test/prompt-no-unsaved.ev" "test/gets-saved.txt" ]
  [ "./editor.exe" "-ev=test/apply-command-initial-focus.ev" ]
  [ "./editor.exe" "-ev=test/apply-command-clear-new.ev" ]
  [ "./editor.exe" "-ev=test/apply-command-history.ev" ]
  [ "./editor.exe" "-ev=test/inspect-file-other-window.ev" "test/language-test.cc" ]

  // This test also touches `gets-modified.txt`.
  [ "./editor.exe" "-ev=test/reload-from-files-dialog.ev" "test/gets-modified.txt" "test/gets-modified2.txt" ]
]

// EOF
