// apply-command-buddy-shortcut.ev
// Testing the ability of Shortcut to use a buddy shortcut.
[

// Open the Apply Command dialog.
Shortcut("window1.m_menuBar.editMenu.editApplyCommand" "Alt+A")
CheckFocusWidget("ApplyCommandDialog.m_prevCommandsListWidget")

// This now works.
Shortcut("ApplyCommandDialog.m_newCommandLabel" "Alt+N")

// Focus is on the right control.
CheckFocusWidget("ApplyCommandDialog.m_newCommandLineEdit")

// Close dialog.
FocusKeyPR("Key_Escape" "\u{1B}")

]
// EOF
