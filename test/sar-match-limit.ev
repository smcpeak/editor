# sar-match-limit.ev
# Test hitting the match limit.

# Expected file: test/file1.h.

# Initially the corner labels should be hidden.
CheckLabel "window1.editorFrame.m_editorWidget.m_matchesAboveLabel" ""
CheckLabel "window1.editorFrame.m_editorWidget.m_matchesBelowLabel" ""

# Search for the regex ".".
Shortcut "window1.m_menuBar.editMenu.editSearch" "Ctrl+S"
KeyPress "window1.m_sarPanel.m_findBox" "ControlModifier+Key_E" "\x05"
KeyPress "window1.m_sarPanel.m_findBox" "NoModifier+Key_Period" "."

# Check for the trailing "+" in the status.  It so happens we reach 1027
# when the limit is hit.
CheckLabel "window1.m_sarPanel.m_matchStatusLabel" " 1  / 1027+"

# Check corner labels.
#
# TODO: This is fragile as it depends on the window starting size
# and the system font size.
CheckLabel "window1.editorFrame.m_editorWidget.m_matchesAboveLabel" "0+"
CheckLabel "window1.editorFrame.m_editorWidget.m_matchesBelowLabel" "0+"

# Return to the editor and go down a couple of pages.
Shortcut "window1.m_menuBar.editMenu.editSearch" "Ctrl+S"
KeyPress "window1.editorFrame.m_editorWidget" "NoModifier+Key_PageDown" ""
KeyPress "window1.editorFrame.m_editorWidget" "NoModifier+Key_PageDown" ""

# Check the status there.
CheckLabel "window1.m_sarPanel.m_matchStatusLabel" ">1027  / 1027+"
CheckLabel "window1.editorFrame.m_editorWidget.m_matchesAboveLabel" "1027+"
CheckLabel "window1.editorFrame.m_editorWidget.m_matchesBelowLabel" "0+"

# Close the SAR panel.
KeyPress "window1.editorFrame.m_editorWidget" "NoModifier+Key_Escape" "\x1B"

# Corner labels should be gone.
CheckLabel "window1.editorFrame.m_editorWidget.m_matchesAboveLabel" ""
CheckLabel "window1.editorFrame.m_editorWidget.m_matchesBelowLabel" ""

# EOF
